<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android           = "http://schemas.android.com/apk/res/android"
    xmlns:app               = "http://schemas.android.com/apk/res-auto"
    xmlns:tools             = "http://schemas.android.com/tools"
    android:layout_width    = "match_parent"
    android:layout_height   = "match_parent"
    android:background      = "@drawable/background"
    tools:context           = ".HomeActivity">

    <LinearLayout
        android:layout_width                = "match_parent"
        android:layout_height               = "match_parent"
        android:orientation                 = "vertical"
        android:layout_above                = "@id/bottom_navigation">
        <!-- Profile -->
        <RelativeLayout
            android:layout_width                = "match_parent"
            android:layout_height               = "wrap_content"
            android:layout_marginTop            = "25dp"
            android:layout_marginLeft           = "15dp"
            android:layout_marginRight          = "15dp">
            <TextView
                android:id                          = "@+id/text_Regards"
                android:layout_width                = "wrap_content"
                android:layout_height               = "wrap_content"
                android:text                        = "Welcome Back,"
                android:textColor                   = "#D4D4D4"/>
            <TextView
                android:layout_width                = "wrap_content"
                android:layout_height               = "wrap_content"
                android:layout_below                = "@id/text_Regards"
                android:text                        = "Hasyim Asy'ari"
                android:textSize                    = "20dp"
                android:textStyle                   = "bold"
                android:textColor                   = "@color/white"/>
            <ImageView
                android:id                          = "@+id/imageView_Notif"
                android:layout_width                = "18dp"
                android:layout_height               = "40dp"
                android:layout_alignParentRight     = "true"
                android:layout_marginRight          = "55dp"
                android:src                         = "@drawable/bell"/>
            <ImageView
                android:id                          = "@+id/imageView_Profile"
                android:layout_width                = "40dp"
                android:layout_height               = "40dp"
                android:layout_alignParentRight     = "true"
                app:srcCompat                       = "@drawable/profile"/>
        </RelativeLayout>

        <!-- Balance -->
        <LinearLayout
            android:layout_width                = "match_parent"
            android:layout_height               = "wrap_content"
            android:layout_marginTop            = "15dp"
            android:layout_marginLeft           = "15dp"
            android:layout_marginRight          = "15dp"
            android:orientation                 = "vertical">
            <RelativeLayout
                android:layout_width                = "match_parent"
                android:layout_height               = "135dp"
                android:paddingTop                  = "15dp"
                android:paddingLeft                 = "15dp"
                android:background                  = "@drawable/card_balance">
                <TextView
                    android:id                          = "@+id/text_Balance"
                    android:layout_width                = "wrap_content"
                    android:layout_height               = "wrap_content"
                    android:text                        = "Balance"
                    android:textStyle                   = "bold"
                    android:textColor                   = "#276EB0"/>
                <TextView
                    android:id                          = "@+id/text_Date"
                    android:layout_width                = "wrap_content"
                    android:layout_height               = "wrap_content"
                    android:layout_below                = "@id/text_Balance"
                    android:text                        = "Today, 22 April 2022"
                    android:textSize                    = "12dp"
                    android:textColor                   = "#276EB0"/>
                <TextView
                    android:id                          = "@+id/balance"
                    android:layout_width                = "wrap_content"
                    android:layout_height               = "wrap_content"
                    android:layout_below                = "@id/text_Date"
                    android:layout_marginTop            = "20dp"
                    android:text                        = "$1,832.00"
                    android:textSize                    = "20dp"
                    android:textStyle                   = "bold"
                    android:textColor                   = "#276EB0"/>
                <TextView
                    android:layout_width                = "wrap_content"
                    android:layout_height               = "wrap_content"
                    android:layout_below                = "@id/balance"
                    android:text                        = "up by 2% from last month"
                    android:textSize                    = "12dp"
                    android:textColor                   = "#276EB0"/>

                <LinearLayout
                    android:id                          = "@+id/balance_Set"
                    android:layout_width                = "wrap_content"
                    android:layout_height               = "wrap_content"
                    android:layout_alignParentRight     = "true"
                    android:layout_marginTop            = "6dp"
                    android:layout_marginRight          = "20dp"
                    android:orientation                 = "horizontal">
                    <ImageView
                        android:layout_width                = "5dp"
                        android:layout_height               = "5dp"
                        android:src                         = "@drawable/circle"/>
                    <ImageView
                        android:layout_width                = "5dp"
                        android:layout_height               = "5dp"
                        android:layout_marginLeft           = "3dp"
                        android:src                         = "@drawable/circle"/>
                    <ImageView
                        android:layout_width                = "5dp"
                        android:layout_height               = "5dp"
                        android:layout_marginLeft           = "3dp"
                        android:src                         = "@drawable/circle"/>
                </LinearLayout>
                <ImageView
                    android:layout_width                = "70dp"
                    android:layout_height               = "wrap_content"
                    android:layout_alignParentRight     = "true"
                    android:layout_marginTop            = "62dp"
                    android:layout_marginRight          = "20dp"
                    android:src                         = "@drawable/logo_paypal"/>
            </RelativeLayout>
            <LinearLayout
                android:id                          = "@+id/swipe_Balance"
                android:layout_width                = "wrap_content"
                android:layout_height               = "wrap_content"
                android:layout_marginTop            = "15dp"
                android:layout_gravity              = "center"
                android:orientation                 = "horizontal">
                <ImageView
                    android:layout_width                = "7dp"
                    android:layout_height               = "7dp"
                    android:layout_marginEnd            = "3dp"
                    android:src                         = "@drawable/circle"/>
                <ImageView
                    android:layout_width                = "7dp"
                    android:layout_height               = "7dp"
                    android:src                         = "@drawable/circle_outline"/>
                <ImageView
                    android:layout_width                = "7dp"
                    android:layout_height               = "7dp"
                    android:layout_marginStart          = "3dp"
                    android:src                         = "@drawable/circle_outline"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width                = "match_parent"
            android:layout_height               = "wrap_content"
            android:layout_marginTop            = "25dp"
            android:layout_marginLeft           = "15dp"
            android:layout_marginRight          = "15dp"
            android:layout_marginBottom         = "15dp"
            android:orientation                 = "horizontal">
            <TextView
                android:layout_width                = "wrap_content"
                android:layout_height               = "wrap_content"
                android:text                        = "Recent Transactions"
                android:textSize                    = "17dp"
                android:textStyle                   = "bold"
                android:textColor                   = "@color/black"/>
            <Button
                android:id                          = "@+id/button_Transaction"
                android:layout_width                = "120dp"
                android:layout_height               = "38dp"
                android:layout_marginLeft           = "70dp"
                android:text                        = "View all"
                android:textSize                    = "17dp"
                android:textColor                   = "#276EB0"
                android:background                  = "@drawable/button_custom"/>
        </LinearLayout>
        <!-- Transactions -->
        <ScrollView
            android:layout_width                = "match_parent"
            android:layout_height               = "wrap_content"
            android:layout_marginLeft           = "15dp"
            android:layout_marginRight          = "15dp">
            <LinearLayout
                android:layout_width                = "match_parent"
                android:layout_height               = "wrap_content"
                android:orientation                 = "vertical">
                <LinearLayout
                    android:layout_width                = "wrap_content"
                    android:layout_height               = "154dp"
                    android:orientation                 = "vertical"
                    android:background                  = "@drawable/card_transaction">
                    <RelativeLayout
                        android:id                          = "@+id/transaction_Credit1"
                        android:layout_width                = "match_parent"
                        android:layout_height               = "77dp"
                        android:padding                     = "15dp">
                        <ImageView
                            android:layout_width                = "43dp"
                            android:layout_height               = "match_parent"
                            android:layout_alignParentLeft      = "true"
                            android:src                         = "@drawable/transaction_dropbox"/>
                        <LinearLayout
                            android:layout_width                = "match_parent"
                            android:layout_height               = "match_parent"
                            android:layout_marginLeft           = "60dp"
                            android:orientation                 = "vertical">
                            <TextView
                                android:layout_width                = "wrap_content"
                                android:layout_height               = "wrap_content"
                                android:text                        = "Dropbox Plan"
                                android:textSize                    = "17dp"
                                android:textStyle                   = "bold"
                                android:textColor                   = "@color/black"/>
                            <TextView
                                android:layout_width                = "wrap_content"
                                android:layout_height               = "wrap_content"
                                android:text                        = "Subscription"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width                = "104dp"
                            android:layout_height               = "match_parent"
                            android:layout_alignParentRight     = "true"
                            android:paddingTop                  = "11dp"
                            android:text                        = "- $184.00"
                            android:textSize                    = "17dp"
                            android:textStyle                   = "bold"
                            android:textColor                   = "#EA3C43"
                            android:textAlignment               = "center"/>
                        <ImageView
                            android:layout_width                = "104dp"
                            android:layout_height               = "match_parent"
                            android:layout_alignParentRight     = "true"
                            android:src                         = "@drawable/credit"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id                          = "@+id/transaction_Credit2"
                        android:layout_width                = "match_parent"
                        android:layout_height               = "77dp"
                        android:padding                     = "15dp">
                        <ImageView
                            android:layout_width                = "43dp"
                            android:layout_height               = "match_parent"
                            android:layout_alignParentLeft      = "true"
                            android:src                         = "@drawable/transaction_spotify"/>
                        <LinearLayout
                            android:layout_width                = "match_parent"
                            android:layout_height               = "match_parent"
                            android:layout_marginLeft           = "60dp"
                            android:orientation                 = "vertical">
                            <TextView
                                android:layout_width                = "wrap_content"
                                android:layout_height               = "wrap_content"
                                android:text                        = "Spotify Subscr."
                                android:textSize                    = "17dp"
                                android:textStyle                   = "bold"
                                android:textColor                   = "@color/black"/>
                            <TextView
                                android:layout_width                = "wrap_content"
                                android:layout_height               = "wrap_content"
                                android:text                        = "Subscription"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width                = "104dp"
                            android:layout_height               = "match_parent"
                            android:layout_alignParentRight     = "true"
                            android:paddingTop                  = "11dp"
                            android:text                        = "- $64.00"
                            android:textSize                    = "17dp"
                            android:textStyle                   = "bold"
                            android:textColor                   = "#EA3C43"
                            android:textAlignment               = "center"/>
                        <ImageView
                            android:layout_width                = "104dp"
                            android:layout_height               = "match_parent"
                            android:layout_alignParentRight     = "true"
                            android:src                         = "@drawable/credit"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width                = "wrap_content"
                    android:layout_height               = "154dp"
                    android:layout_marginTop            = "10dp"
                    android:layout_marginBottom         = "15dp"
                    android:orientation                 = "vertical"
                    android:background                  = "@drawable/card_transaction">
                    <RelativeLayout
                        android:id                          = "@+id/transaction_Debit1"
                        android:layout_width                = "match_parent"
                        android:layout_height               = "77dp"
                        android:padding                     = "15dp">
                        <ImageView
                            android:layout_width                = "43dp"
                            android:layout_height               = "match_parent"
                            android:layout_alignParentLeft      = "true"
                            android:src                         = "@drawable/transaction_youtube"/>
                        <LinearLayout
                            android:layout_width                = "match_parent"
                            android:layout_height               = "match_parent"
                            android:layout_marginLeft           = "60dp"
                            android:orientation                 = "vertical">
                            <TextView
                                android:layout_width                = "wrap_content"
                                android:layout_height               = "wrap_content"
                                android:text                        = "YouTube Ads."
                                android:textSize                    = "17dp"
                                android:textStyle                   = "bold"
                                android:textColor                   = "@color/black"/>
                            <TextView
                                android:layout_width                = "wrap_content"
                                android:layout_height               = "wrap_content"
                                android:text                        = "Income"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width                = "104dp"
                            android:layout_height               = "match_parent"
                            android:layout_alignParentRight     = "true"
                            android:paddingTop                  = "11dp"
                            android:text                        = "+ $72.00"
                            android:textSize                    = "17dp"
                            android:textStyle                   = "bold"
                            android:textColor                   = "#26AE26"
                            android:textAlignment               = "center"/>
                        <ImageView
                            android:layout_width                = "104dp"
                            android:layout_height               = "match_parent"
                            android:layout_alignParentRight     = "true"
                            android:src                         = "@drawable/debit"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id                          = "@+id/transaction_Debit2"
                        android:layout_width                = "match_parent"
                        android:layout_height               = "77dp"
                        android:padding                     = "15dp">
                        <ImageView
                            android:layout_width                = "43dp"
                            android:layout_height               = "match_parent"
                            android:layout_alignParentLeft      = "true"
                            android:src                         = "@drawable/transaction_other"/>
                        <LinearLayout
                            android:layout_width                = "match_parent"
                            android:layout_height               = "match_parent"
                            android:layout_marginLeft           = "60dp"
                            android:orientation                 = "vertical">
                            <TextView
                                android:layout_width                = "wrap_content"
                                android:layout_height               = "wrap_content"
                                android:text                        = "Freelance Work"
                                android:textSize                    = "17dp"
                                android:textStyle                   = "bold"
                                android:textColor                   = "@color/black"/>
                            <TextView
                                android:layout_width                = "wrap_content"
                                android:layout_height               = "wrap_content"
                                android:text                        = "Income"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width                = "104dp"
                            android:layout_height               = "match_parent"
                            android:layout_alignParentRight     = "true"
                            android:paddingTop                  = "11dp"
                            android:text                        = "+ $821.00"
                            android:textSize                    = "17dp"
                            android:textStyle                   = "bold"
                            android:textColor                   = "#26AE26"
                            android:textAlignment               = "center"/>
                        <ImageView
                            android:layout_width                = "104dp"
                            android:layout_height               = "match_parent"
                            android:layout_alignParentRight     = "true"
                            android:src                         = "@drawable/debit"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Menu -->
    <androidx.cardview.widget.CardView
        android:id                          = "@+id/bottom_navigation"
        android:layout_width                = "match_parent"
        android:layout_height               = "50dp"
        android:layout_alignParentBottom    = "true">
        <LinearLayout
            android:layout_width                = "match_parent"
            android:layout_height               = "match_parent"
            android:orientation                 = "horizontal">
            <ImageView
                android:id                          = "@+id/imageView_Menu1"
                android:layout_width                = "20dp"
                android:layout_height               = "20dp"
                android:src                         = "@drawable/menu1"
                android:layout_gravity              = "center"
                android:layout_marginLeft           = "58dp"/>
            <ImageView
                android:id                          = "@+id/imageView_Menu2"
                android:layout_width                = "20dp"
                android:layout_height               = "20dp"
                android:src                         = "@drawable/menu2"
                android:layout_gravity              = "center"
                android:layout_marginLeft           = "65dp"/>
            <ImageView
                android:id                          = "@+id/imageView_Menu3"
                android:layout_width                = "20dp"
                android:layout_height               = "20dp"
                android:src                         = "@drawable/menu3"
                android:layout_gravity              = "center"
                android:layout_marginLeft           = "65dp"/>
            <ImageView
                android:id                          = "@+id/imageView_Menu4"
                android:layout_width                = "15dp"
                android:layout_height               = "15dp"
                android:src                         = "@drawable/menu4"
                android:layout_gravity              = "center"
                android:layout_marginLeft           = "65dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>